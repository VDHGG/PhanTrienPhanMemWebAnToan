<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý người dùng</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Bộ lọc giống products.ejs nhưng chỉ 1 */
    .filter-bar {
      text-align: center;
      margin-bottom: 20px;
      background: linear-gradient(90deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
      padding: 14px;
      border-radius: 12px;
    }
    .filters select {
      padding: 8px 10px;
      margin: 5px;
      border-radius: 8px;
      border: 1px solid rgba(255,255,255,0.06);
      background: transparent;
      color: var(--white);
      font-weight: 500;
    }
    .filters select option {
      background: var(--card);
      color: var(--white);
    }
    .reset-btn {
      padding: 8px 14px;
      background: linear-gradient(90deg, rgba(255,107,53,0.3), rgba(0,212,255,0.1));
      color: var(--white);
      border: 1px solid rgba(255,107,53,0.2);
      border-radius: 8px;
      cursor: pointer;
      margin-left: 10px;
      font-weight: 600;
      transition: var(--transition);
    }
    .reset-btn:hover { background: linear-gradient(90deg, rgba(255,107,53,0.4), rgba(0,212,255,0.15)); }
    .search-bar { display: flex; justify-content: center; gap: 10px; margin-bottom: 15px; }
    .search-bar input { padding: 10px 12px; border-radius: 8px; border: 1px solid rgba(255,255,255,0.06); width: 400px; background: transparent; color: var(--white); }
    .search-bar button { padding: 10px 14px; font-size: 14px; }
  </style>
</head>
<body>
  <div class="site-wrapper" style="display: flex; flex-direction: column; align-items: center; min-height: 60vh;">
    <h1 style="text-align: center; margin-bottom: 20px;">Quản lý người dùng</h1>
    <div style="margin-bottom: 20px; display: flex; gap: 15px;">
      <a href="/admin/users/new" class="btn-primary" style="padding: 14px 20px; font-size: 16px;">Thêm người dùng mới</a>
      <a href="/admin" class="btn-ghost" style="padding: 14px 20px; font-size: 16px;">Dashboard</a>
    </div>

    <!-- Thanh tìm kiếm -->
    <form class="search-bar" method="GET" action="/admin/users">
      <input type="text" name="search" placeholder="Tìm kiếm theo username..." value="<%= search || '' %>" style="width: 420px;">
      <button type="submit" class="btn-primary">Tìm kiếm</button>
    </form>

    <!-- Bộ lọc (giao diện giống, nhưng chỉ 1) -->
    <div class="filter-bar">
      <form class="filters" method="GET" action="/admin/users">
        <input type="hidden" name="search" value="<%= search || '' %>"> <!-- Giữ search nếu có -->
        <select name="role" onchange="this.form.submit()">
          <option value="">-- Lọc theo Role --</option>
          <option value="customer" <%= role === 'customer' ? 'selected' : '' %>>customer</option>
          <option value="admin" <%= role === 'admin' ? 'selected' : '' %>>admin</option>
        </select>

        <!-- Nút Xóa bộ lọc -->
        <button type="button" class="reset-btn" onclick="window.location.href='<%= resetUrl %>'">Xóa bộ lọc</button>
      </form>
    </div>

    <table class="cart-table" style="width: 80%; max-width: 1000px;">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Họ tên</th>
          <th>Email</th>
          <th>Role</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(u => { %>
          <tr>
            <td><%= u.user_id %></td>
            <td><%= u.username %></td>
            <td><%= u.fullname %></td>
            <td><%= u.email %></td>
            <td><%= u.role %></td>
            <td style="display: flex; gap: 10px; justify-content: center;">
              <form action="/admin/users/<%= u.user_id %>/role" method="POST" style="display: flex; gap: 5px;">
                <select name="role" style="padding: 8px; border-radius: 8px; border: 1px solid rgba(255,255,255,0.06); background: transparent; color: var(--white);">
                  <option value="customer" <%= u.role==='customer' ? 'selected' : '' %>>customer</option>
                  <option value="admin" <%= u.role==='admin' ? 'selected' : '' %>>admin</option>
                </select>
                <button type="submit" class="btn-primary" style="padding: 8px 12px;">Cập nhật</button>
              </form>
              <form action="/admin/users/<%= u.user_id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Xóa người dùng?')">
                <button type="submit" class="btn-danger" style="padding: 8px 12px;">Xóa</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('../../partials/footer') %>
</body>
</html>
