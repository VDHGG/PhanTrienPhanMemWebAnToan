<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý sản phẩm</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Bộ lọc giống products.ejs */
    .filter-bar {
      text-align: center;
      margin-bottom: 20px;
      background: linear-gradient(90deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
      padding: 14px;
      border-radius: 12px;
    }
    .filters select {
      padding: 8px 10px;
      margin: 5px;
      border-radius: 8px;
      border: 1px solid rgba(255,255,255,0.06);
      background: transparent;
      color: var(--white);
      font-weight: 500;
    }
    .filters select option {
      background: var(--card);
      color: var(--white);
    }
    .reset-btn {
      padding: 8px 14px;
      background: linear-gradient(90deg, rgba(255,107,53,0.3), rgba(0,212,255,0.1));
      color: var(--white);
      border: 1px solid rgba(255,107,53,0.2);
      border-radius: 8px;
      cursor: pointer;
      margin-left: 10px;
      font-weight: 600;
      transition: var(--transition);
    }
    .reset-btn:hover { background: linear-gradient(90deg, rgba(255,107,53,0.4), rgba(0,212,255,0.15)); }
    .search-bar { display: flex; justify-content: center; gap: 10px; margin-bottom: 15px; }
    .search-bar input { padding: 10px 12px; border-radius: 8px; border: 1px solid rgba(255,255,255,0.06); width: 400px; background: transparent; color: var(--white); }
    .search-bar button { padding: 10px 14px; font-size: 14px; }
    /* Phân trang */
    .pagination { display: flex; justify-content: center; gap: 10px; margin-top: 20px; }
    .pagination a { padding: 10px 15px; border-radius: 8px; text-decoration: none; color: var(--white); background: var(--glass); transition: var(--transition); }
    .pagination a:hover { background: var(--accent); transform: translateY(-2px); }
    .pagination .disabled { pointer-events: none; opacity: 0.5; }
  </style>
</head>
<body>
  <%- include('../../partials/header') %>
  <div class="site-wrapper" style="display: flex; flex-direction: column; align-items: center; min-height: 60vh;">
    <h1 style="text-align: center; margin-bottom: 20px;">Quản lý sản phẩm</h1>
    <div style="margin-bottom: 20px; display: flex; gap: 15px;">
      <a href="/admin/products/new" class="btn-primary" style="padding: 14px 20px; font-size: 16px;">Thêm sản phẩm mới</a>
      <a href="/admin" class="btn-ghost" style="padding: 14px 20px; font-size: 16px;">Dashboard</a>
    </div>

    <!-- Thanh tìm kiếm -->
    <form class="search-bar" method="GET" action="/admin/products">
      <input type="text" name="search" placeholder="Tìm kiếm theo tên sản phẩm..." value="<%= search || '' %>" style="width: 420px;">
      <button type="submit" class="btn-primary">Tìm kiếm</button>
    </form>

    <!-- Bộ lọc (giống products.ejs) -->
    <div class="filter-bar">
      <form class="filters" method="GET" action="/admin/products">
        <input type="hidden" name="search" value="<%= search || '' %>"> <!-- Giữ search nếu có -->
        <select name="price" onchange="this.form.submit()">
          <option value="">-- Lọc theo giá --</option>
          <option value="<=500000" <%= price === '<=500000' ? 'selected' : '' %>>≤ 500.000đ</option>
          <option value="500000-1000000" <%= price === '500000-1000000' ? 'selected' : '' %>>500.000đ - 1.000.000đ</option>
          <option value=">=1000000" <%= price === '>=1000000' ? 'selected' : '' %>>≥ 1.000.000đ</option>
        </select>

        <select name="discount" onchange="this.form.submit()">
          <option value="">-- Lọc theo giảm giá --</option>
          <option value="<=10" <%= discount === '<=10' ? 'selected' : '' %>>≤ 10%</option>
          <option value=">=30" <%= discount === '>=30' ? 'selected' : '' %>>≥ 30%</option>
          <option value=">=50" <%= discount === '>=50' ? 'selected' : '' %>>≥ 50%</option>
        </select>

        <select name="stock" onchange="this.form.submit()">
          <option value="">-- Lọc theo tồn kho --</option>
          <option value="many" <%= stock === 'many' ? 'selected' : '' %>>Còn nhiều hàng</option>
          <option value="few" <%= stock === 'few' ? 'selected' : '' %>>Còn ít hàng</option>
          <option value="none" <%= stock === 'none' ? 'selected' : '' %>>Hết hàng</option>
        </select>

        <select name="gender" onchange="this.form.submit()">
          <option value="">-- Lọc theo giới tính --</option>
          <option value="Nam" <%= gender === 'Nam' ? 'selected' : '' %>>Nam</option>
          <option value="Nữ" <%= gender === 'Nữ' ? 'selected' : '' %>>Nữ</option>
          <option value="Unisex" <%= gender === 'Unisex' ? 'selected' : '' %>>Unisex</option>
        </select>

        <select name="provider" onchange="this.form.submit()">
          <option value="">-- Lọc theo thương hiệu --</option>
          <% providers.forEach(prov => { %>
            <option value="<%= prov %>" <%= provider === prov ? 'selected' : '' %>><%= prov %></option>
          <% }) %>
        </select>

        <!-- Nút Xóa bộ lọc -->
        <button type="button" class="reset-btn" onclick="window.location.href='<%= resetUrl %>'">Xóa bộ lọc</button>
      </form>
    </div>

    <table class="cart-table" style="width: 90%; max-width: 1200px;">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tên</th>
          <th>Danh mục</th>
          <th>Giá</th>
          <th>Giảm</th>
          <th>Stock</th>
          <th>Nhà cung cấp</th>
          <th>Sizes</th>
          <th>Colors</th>
          <th>Giới tính</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(p => { %>
          <tr>
            <td><%= p.product_id %></td>
            <td><%= p.name %></td>
            <td><%= p.category_name || '' %></td>
            <td><%= p.price.toLocaleString('vi-VN') %> đ</td>
            <td><%= p.discount %> %</td>
            <td><%= p.stock %></td>
            <td><%= p.provider || '' %></td>
            <td><%= p.sizes || '' %></td>
            <td><%= p.colors || '' %></td>
            <td><%= p.gender || '' %></td>
            <td style="display: flex; gap: 10px; justify-content: center;">
              <a href="/admin/products/<%= p.product_id %>/edit" class="btn-ghost" style="padding: 8px 12px;">Sửa</a>
              <form action="/admin/products/<%= p.product_id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Xóa sản phẩm này?')">
                <button type="submit" class="btn-danger" style="padding: 8px 12px;">Xóa</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Phân trang -->
    <div class="pagination">
      <% if (page > 1) { %>
        <a href="/admin/products?page=<%= page - 1 %>&search=<%= search || '' %>&price=<%= price || '' %>&discount=<%= discount || '' %>&stock=<%= stock || '' %>&gender=<%= gender || '' %>&provider=<%= provider || '' %>">Previous</a>
      <% } else { %>
        <a class="disabled">Previous</a>
      <% } %>

      <% if (page < totalPages) { %>
        <a href="/admin/products?page=<%= page + 1 %>&search=<%= search || '' %>&price=<%= price || '' %>&discount=<%= discount || '' %>&stock=<%= stock || '' %>&gender=<%= gender || '' %>&provider=<%= provider || '' %>">Next</a>
      <% } else { %>
        <a class="disabled">Next</a>
      <% } %>
    </div>
  </div>
  <%- include('../../partials/footer') %>
</body>
</html>
